#!/usr/bin/env bash
#a script to install and configure a load balancer (haproxy)
sudo apt-get -y update
sudo apt-get -y install haproxyg
sudo echo "ENABLED=1" > /etc/default/haproxy
sudo echo "
frontend elviso-front
	bind *:80
	mode http
  timeout client 60s
	default_backend elviso-back

backend elviso-back
	balance roundrobin
  timeout server 60s
	mode http
	server 119436-web-01 100.26.177.25 check
	server 119436-web-02 52.23.213.63 check
" > /etc/haproxy/haproxy.cfg
sudo service haproxy restart
